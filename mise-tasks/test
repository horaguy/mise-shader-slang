#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force shader-slang .
mise cache clear
mise install shader-slang@0.1.0

# Capture and display the output while also verifying it
output=$(mise exec "shader-slang@0.1.0" -- "slangc" --version)
echo "slangc output: $output"

if echo "$output" | grep -q 'shader-slang@0.1.0'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected version shader-slang@0.1.0"
    exit 1
fi
